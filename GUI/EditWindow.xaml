<Window x:Class="GUI.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:model="clr-namespace:Database.DatabaseModels;assembly=Database"
        mc:Ignorable="d"
        Title="EditWindow" Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource {x:Type Window}}">
    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ContainerBorder" Padding="2">
                            <ContentPresenter x:Name="Item"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ContainerBorder" Property="Background" Value="{DynamicResource ResourceKey=SelectionBorderBrush}"/>
                                <Setter TargetName="Item" Property="TextElement.FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <TabControl Background="{DynamicResource ContentBackgroundBrush}" Padding="0" BorderThickness="0">
        <TabItem Header="Key Lists">
            <Border Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Column="0" Margin="0,0,10,0">
                        <ListBoxItem>Hello?</ListBoxItem>
                    </ListBox>
                    <Grid Grid.Column="1"/>
                </Grid>
            </Border>
        </TabItem>
        <TabItem Header="Keys">
            <TabItem.Resources>
                <DataTemplate DataType="{x:Type model:KeyBunch}">
                    <Border Padding="10" TextElement.Foreground="{DynamicResource NormalTextBrush}" Background="#4b566a">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontSize="22" Text="{Binding Path=BunchNumber}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Path=Name}" TextWrapping="Wrap"/>
                                <TextBlock>
                            Number of keys: <TextBlock Text="{Binding Path=NumberOfKeys}"/>
                        </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </TabItem.Resources>
            <Border Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Column="0"
                             Margin="0,0,10,0"
                             ItemsSource="{Binding AllKeyBunches}">
                    </ListBox>
                    <Grid Grid.Column="1"/>
                </Grid>
            </Border>
        </TabItem>
        <TabItem Header="Squadrons">
            <Border Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Column="0" Margin="0,0,10,0">
                        <ListBoxItem>Hello?</ListBoxItem>
                    </ListBox>
                    <Grid Grid.Column="1"/>
                </Grid>
            </Border>
        </TabItem>
    </TabControl>
</Window>
